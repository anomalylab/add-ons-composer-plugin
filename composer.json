{
    "name": "anomaly/add-ons-composer-plugin",
    "description": "Composer plugin for anomaly add-ons.",
    "type": "composer-plugin",
    "license": "BSD 3-Clause",
    "authors": [
        {
            "name": "Bill",
            "email": "bill@anomalylab.org",
            "homepage": "https://artisanbill.com"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "1.0.*@dev",
        "codeclimate/php-test-reporter": "dev-master",
        "henrikbjorn/phpspec-code-coverage": "~0.2",
        "phpspec/phpspec": "2.0.*@dev"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Anomaly\\AddnsComposerPlugin\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "class": "Anomaly\\AddnsComposerPlugin\\Plugin",
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
