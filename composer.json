{
    "name": "ofcold/composer-plugin",
    "description": "Composer plugin for anomaly add-ons.",
    "keywords": ["composer plugin", "composer", "plugin", "package manager"],
    "type": "composer-plugin",
    "license": "BSD 3-Clause",
    "homepage": "https://ofcold.com/",
    "authors": [
        {
            "name": "Ofcold Team",
            "email": "support@ofcold.com",
            "homepage": "https://ofcold.com"
        },
        {
            "name": "Olivia Fu",
            "email": "olivia.fu@ofcold.com",
            "homepage": "https://olivia.ink"
        },
        {
            "name": "Bill Li",
            "email": "bill@ofcold.com",
            "homepage": "https://artisanbill.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "1.0.*@dev",
        "codeclimate/php-test-reporter": "dev-master",
        "henrikbjorn/phpspec-code-coverage": "~0.2",
        "phpspec/phpspec": "2.0.*@dev"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Ofcold\\ComposerPlugin\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "class": "Ofcold\\ComposerPlugin\\Plugin",
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
